{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "custom": true,
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0d6efd",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#6c757d",
                    "name": "Secondary"
                },
                {
                    "slug": "success",
                    "color": "#198754",
                    "name": "Success"
                },
                {
                    "slug": "danger",
                    "color": "#dc3545",
                    "name": "Danger"
                },
                {
                    "slug": "warning",
                    "color": "#ffc107",
                    "name": "Warning"
                },
                {
                    "slug": "info",
                    "color": "#0dcaf0",
                    "name": "Info"
                },
                {
                    "slug": "light",
                    "color": "#f8f9fa",
                    "name": "Light"
                },
                {
                    "slug": "dark",
                    "color": "#212529",
                    "name": "Dark"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "fontFamilies": [
                {
                    "fontFamily": "system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', 'Noto Sans', 'Liberation Sans', Arial, sans-serif",
                    "slug": "system",
                    "name": "System"
                },
                {
                    "fontFamily": "SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace",
                    "slug": "monospace",
                    "name": "Monospace"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "2rem",
                    "name": "Huge"
                }
            ]
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": [
                "px",
                "em",
                "rem",
                "%",
                "vw",
                "vh"
            ]
        },
        "layout": {
            "contentSize": "720px",
            "wideSize": "1140px"
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--dark)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "1.5rem",
            "padding": {
                "left": "1rem",
                "right": "1rem"
            }
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--dark)"
                    }
                }
            },
            "button": {
                "border": {
                    "radius": "0.375rem"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--dark)"
                    }
                }
            },
            "heading": {
                "typography": {
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                }
            }
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": "0.375rem"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem",
                        "right": "1.5rem"
                    }
                }
            },
            "core/code": {
                "color": {
                    "background": "var(--wp--preset--color--dark)",
                    "text": "var(--wp--preset--color--light)"
                },
                "spacing": {
                    "padding": "1.5rem"
                },
                "border": {
                    "radius": "0.375rem"
                }
            },
            "core/quote": {
                "border": {
                    "width": "0 0 0 4px",
                    "color": "var(--wp--preset--color--primary)"
                },
                "spacing": {
                    "padding": {
                        "left": "1.5rem"
                    }
                }
            }
        }
    }
}